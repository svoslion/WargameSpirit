{% extends 'base.html.twig' %}

{% block title %}Page inscription
{% endblock %}

{% block body %}

	<div class="container w-25">
		<div class="card card-5">
			<div class="card-heading">
				<h1 class="title-inscription">
					Inscription WargameSpirit</h1>
			</div>

			{{ form_start(registrationForm) }}
			<div class="mail-inscription">
				<div class="paragraphe-inscription">
					<p>Créez votre compte Wargamespirit</p>
				</div>
			</div>

			<div class="card-body">
				<form method="POST">

					<div class="form-row">
						<div class="name">

							{{ form_row(registrationForm.email) }}
						</div>
						<div class="value">
							
						</div>
					</div>



					<div class="password">
						{{ form_row(registrationForm.plainPassword, {
            
            label: 'Mot de passe'
        }) }}
					</div>
					


					<button class="btn--radius-2 btn--green" type="submit">Terminer l'inscription</button>

								<p>
                                <a href="{{path('app_login')}}">J'ai déjà un compte</a>
								
								</p>
							
					{{ form_end(registrationForm) }}
				</div>
			</div>
		</form>
	</div>

{% endblock %}
